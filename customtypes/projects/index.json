{
  "id": "projects",
  "label": "Project",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date",
          "placeholder": ""
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "url": {
        "type": "Link",
        "config": {
          "label": "Url",
          "placeholder": "",
          "select": null
        }
      },
      "tech": {
        "type": "Text",
        "config": {
          "label": "Tech",
          "placeholder": ""
        }
      },
      "platform_support": {
        "type": "Group",
        "config": {
          "label": "Platform Support",
          "fields": {
            "macos": {
              "type": "Boolean",
              "config": {
                "label": "MacOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            },
            "ios": {
              "type": "Boolean",
              "config": {
                "label": "iOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            },
            "ipados": {
              "type": "Boolean",
              "config": {
                "label": "iPadOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            },
            "tvos": {
              "type": "Boolean",
              "config": {
                "label": "tvOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            },
            "watchos": {
              "type": "Boolean",
              "config": {
                "label": "WatchOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            },
            "visionos": {
              "type": "Boolean",
              "config": {
                "label": "VisionOS",
                "default_value": false,
                "placeholder_true": "true",
                "placeholder_false": "false"
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "text_block": {
              "type": "SharedSlice"
            },
            "feature_blocks": {
              "type": "SharedSlice"
            },
            "app_icon": {
              "type": "SharedSlice"
            },
            "project_image": {
              "type": "SharedSlice"
            },
            "app_window_screenshot": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
